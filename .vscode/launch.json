    "version": "0.2.0",
    "configurations": [{
        "name": "run with testmap",
        "type": "cppdbg",
        "request": "launch",
        "program": "${fileDirname}/${fileBasenameNoExtension}.out",
        "args": ["/home/herb/42work/so_long/src/map_parse/test/test_maps/valid1"],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description": "Set Disassembly Flavor to Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ]
    },
	{
		"name": "Run so_long",
		"type": "cppdbg",
		"request": "launch",
		"program": "${workspaceRoot}/so_long.out",
		"args": ["lib/map_parse/test/test_maps/valid1"],
		"stopAtEntry": false,
		"cwd": "${workspaceRoot}",
		"environment": [],
		"externalConsole": false,
		"MIMode": "gdb",
		"setupCommands": [
			{
				"description": "Enable pretty-printing for gdb",
				"text": "-enable-pretty-printing",
				"ignoreFailures": true
			},
			{
				"description": "Set Disassembly Flavor to Intel",
				"text": "-gdb-set disassembly-flavor intel",
				"ignoreFailures": true
			}
		],
		"preLaunchTask": "Make so_long"
	}]
